alerts:
- rule: DEPLOYMENT_FAILED
- rule: DOMAIN_FAILED
features:
- buildpack-stack=ubuntu-22
ingress:
  rules:
  - component:
      name: do-fastapi-simple
    match:
      path:
        prefix: /
name: do-fastapi-simple
region: ams
services:
- environment_slug: python
  github:
    branch: main
    deploy_on_push: true
    repo: skipperkongen/do-fastapi-simple
  http_port: 8000
  instance_count: 1
  instance_size_slug: apps-s-1vcpu-0.5gb
  name: do-fastapi-simple
  run_command: fastapi run
  source_dir: /
